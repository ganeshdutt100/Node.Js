<!DOCTYPE html>
<html>

<head>
    <title>Welcome</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body>
    <div class="main w-full min-h-screen bg-zinc-900 text-white">
        <div class="form p-10">
            <form action="/create" method="post">
                <input class="block w-full rounded-md outline-none text-white px-5 py-2 bg-zinc-700" type="text"
                    placeholder="Title Goes Here" name="title" />
                <textarea class="block w-full rounded-md outline-none text-white px-5 mt-2 py-2 bg-zinc-700 resize-none"
                    name="details" placeholder="Write your task details here ..."></textarea>

                <button
                    class="mt-2 bg-blue-600 px-5 py-2 rounded-md text-white hover:bg-blue-500 transition-all duration-200 ease-in-out"
                    type="submit">
                    Create Task
                </button>
            </form>
        </div>
        <div class="tasks py-5 flex gap-3 flex-wrap justify-around">
            <h5>
                <% if(files.length> 0){%>
                    <% files.forEach((val)=>{ %>
                        <div class="task  w-72 px-3 py-2 bg-zinc-800">
                            <h1 class="text-3xl tracking-tight text-white font-semibold">
                                <%= val %>

                            </h1>
                            <a href=""
                                class="inline-block mt-2 text-blue-500 hover:text-blue-600 transition-all duration-200 ease-in-out">Read
                                more..</a>
                        </div>

                        <% }) %>
                            <%} else { %>
                                <h3 class="text-3xl tracking-tight text-zinc-500 font-semibold">
                                    No task found
                                </h3>
                                <% } %>
            </h5>




        </div>
    </div>
</body>

</html>